#
# MANIFEST template for source distribution generation
#

include LICENSE README.md MANIFEST.in setup.py
exclude setup.cfg
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.o
global-exclude *.so

# python modules
recursive-include   src/faber *.py
recursive-include   src/atelier *.py
recursive-include   src/atelier *.ui
recursive-include   src/atelier *.qrc
recursive-include   src/atelier *.svg

# VERSION file
include             src/faber/VERSION

# bjam sources
recursive-include   src/bjam *

#documentation
recursive-include   doc *

# scripts
include             scripts/*

# unit tests
recursive-include tests *

# examples
recursive-include examples *