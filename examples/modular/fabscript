from faber.tools.compiler import include
from faber.artefacts.binary import binary

greet = module('greet')

hello = binary('hello', ['hello.cpp', greet.greet])

rule('test', hello, recipe=action('test', '$(>)'), attrs=notfile|always)
alias('clean', clean)

default = hello
